if(Instrument_Mode > 5){Instrument_Mode = 0;}


if(Detector_Distance == 2.0){
    if(Instrument_Mode == 0){
        sprintf(virtualoutput_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/inputs/C3_L115.dat");
        sprintf(calibration_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/calibrations/cal0_2.dat");}
