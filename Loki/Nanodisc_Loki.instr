}
else{
    if(Instrument_Mode == 0){
        sprintf(virtualoutput_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/inputs/C3_L115.dat");
        sprintf(calibration_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/calibrations/cal0_5.dat");}
    if(Instrument_Mode == 1){
        sprintf(virtualoutput_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/inputs/C5_L115.dat");
        sprintf(calibration_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/calibrations/cal1_5.dat");}
    if(Instrument_Mode == 2){
        sprintf(virtualoutput_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/inputs/C8_L115.dat");
        sprintf(calibration_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/calibrations/cal2_5.dat");}
    if(Instrument_Mode == 3){
        sprintf(virtualoutput_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/inputs/C3_L214.dat");
        sprintf(calibration_filename,"/home/srv/mcweb/McWeb/mcsimrunner/sim-compiles/Nanodisc_Science_case_simulation_for_upload/calibrations/cal3_5.dat");}
    if(Instrument_Mode == 4){
